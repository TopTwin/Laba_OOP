@model Laba4._5_OOP.Storage.Entity.Worker
@{
    ViewData["Title"] = "UpdateWorker";
}

<h1>UpdateWorker</h1>

<body>
    <div>
        @using (Html.BeginForm("UpdateLib", "Worker", FormMethod.Post))
        {
            <input id="id" name="id" type="hidden" value=@Model.Id>

            <label>Имя работника</label>
            <input id="Name" type="text" name="Name" value=@Model.Name><br />
            <label>Должность</label>
            <input id="Position" type="text" name="Position" value=@Model.Position><br />
            <label>Зарплата</label>
            <input id="Salary" type="text" name="Salary" value=@Model.Salary><br />

            <input type="submit" value="Обновить информацию" /><br /><br />
        }
    <form action="/Library/PageOfLibrary">
        <button type="submit">Вернуться к библиотеке</button><br />
    </form>
        @using (Html.BeginForm("MainPage", "Main"))
        {
            <input type="submit" value="Вернуться на главную" />
        }
    </div>
</body>
