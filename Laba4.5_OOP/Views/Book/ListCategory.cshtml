@model IEnumerable<Laba4._5_OOP.Storage.Entity.Category>
    @{
        Layout = null;
    }

    <!DOCTYPE html>

    <head>
        <meta charset="utf-8" name="viewport" content="width=device-width" />
        <title>ListCategories</title>
    </head>
    <body>
        <div>
            <h1>Категории</h1><br />

            @if (Convert.ToInt32(ViewBag.Count) != 0)
            {
                @foreach (var item in Model)
                {
                    <label>Название: </label>@item.Name<br />
                    <label>Количество книг: </label>@item.Quantity<br />

                    @using (Html.BeginForm("AddCategoryBook", "Book"))
                    {
                        <button name="id_category" value=@item.Id>Выбрать категорию</button>
                    }
                }
            }
            else
            {
                <label>Категорий нет</label><br />
            }

        </div>
        @using (Html.BeginForm("AddCategory", "Book"))
        {
            <button>Добавить категорию</button><br /><br />
        }
    </body>